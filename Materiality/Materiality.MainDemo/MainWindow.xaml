<Window x:Class="Materiality.MainDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:materiality="clr-namespace:Materiality.WPF.Layouts;assembly=Materiality.WPF"
        xmlns:materiality11="clr-namespace:Materiality.WPF.Controls;assembly=Materiality.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="1300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Materiality.WPF;component/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <ScrollViewer>
        <materiality:MaterialityGrid Margin="0,10,0,0" x:Name="demoGrid">
            <materiality:MaterialityGrid.Background>
                <StaticResource ResourceKey="white"/>
                <!--Visible color of unused/skipped space-->
            </materiality:MaterialityGrid.Background>

            <materiality11:RaisedButton  Content="Roboto" 
                Height="70" FontSize="30"  
                Background="{StaticResource blue lighten-1}" HoverBrush="{StaticResource blue lighten-2}" RippleBrush="{StaticResource blue lighten-3}" 
                 Foreground="White" x:Name="btn2"/>
            <materiality11:FloatingButton Content="DDD" Width="70" Height="70"  HoverBrush="Red"  FontSize="20"  Background="{StaticResource blue accent-1}"  Foreground="White"  x:Name="btn3"/>
            <materiality11:FlatButton  Height="70" FontSize="20"  Background="{StaticResource blue accent-1}"  Foreground="Black"  x:Name="btn4"/>
            <materiality11:MaterialRadioButton RippleBrush="Gray" Click="btn5_Checked" Content="Radio Button" Width="50" Background="Gray" Height="50" x:Name="btn5" />
            
            <materiality:MaterialityGridChildInfo TargetName="btn2" XL="2"/>
            <materiality:MaterialityGridChildInfo TargetName="btn3" XL="2" />
            <materiality:MaterialityGridChildInfo TargetName="btn4" XL="2" />
            <materiality:MaterialityGridChildInfo TargetName="btn5" XL="2" />


        </materiality:MaterialityGrid>
    </ScrollViewer>
</Window>
