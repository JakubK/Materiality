<Window x:Class="Materiality.MainDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:materiality="clr-namespace:Materiality.WPF.Layouts;assembly=Materiality.WPF"
        xmlns:materiality11="clr-namespace:Materiality.WPF.Controls;assembly=Materiality.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="1300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Materiality.WPF;component/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <ScrollViewer>
        <materiality:MaterialityGrid Margin="0,10,0,0" x:Name="demoGrid">
            <materiality:MaterialityGrid.Background>
                <StaticResource ResourceKey="white"/>
                <!--Visible color of unused/skipped space-->
            </materiality:MaterialityGrid.Background>

            <materiality11:MaterialButton RippleBrush="Black" HoverBrush="Red" Height="70" FontSize="20"  Background="{StaticResource blue accent-1}" ButtonType="Raised" Foreground="White" Content="4" x:Name="btn"/>
            <materiality11:MaterialButton HoverBrush="Red" Height="70" FontSize="20"  Background="{StaticResource blue accent-1}" ButtonType="Raised" Foreground="White" Content="4" x:Name="btn2"/>
            <materiality11:MaterialButton HoverBrush="Red" Height="70" FontSize="20"  Background="{StaticResource blue accent-1}" ButtonType="Raised" Foreground="White" Content="4" x:Name="btn3"/>
            <materiality11:MaterialButton HoverBrush="Red" Height="70" FontSize="20"  Background="{StaticResource blue accent-1}" ButtonType="Raised" Foreground="White" Content="4" x:Name="btn4"/>

            <materiality:MaterialityGridChildInfo TargetName="btn"  XL="2" SM="2" SM_Offset="8"/>
            <materiality:MaterialityGridChildInfo TargetName="btn2" XL="2" XL_Offset="1" SM="2" SM_Offset="0"/>
            <materiality:MaterialityGridChildInfo TargetName="btn3" XL="2" XL_Offset="1" SM="2" SM_Offset="8"/>
            <materiality:MaterialityGridChildInfo TargetName="btn4" XL="2" XL_Offset="1" LG="3" MD="3" SM="3" SM_Offset="0"/>

        </materiality:MaterialityGrid>
    </ScrollViewer>
</Window>
