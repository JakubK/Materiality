<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Materiality.WPF.Controls">
    <Style TargetType="{x:Type local:Ripple}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Ripple}">
                    <Ellipse Width="{TemplateBinding Width}" VerticalAlignment="Top"  HorizontalAlignment="Left" Height="{Binding Path=Width,RelativeSource= {RelativeSource Self}}">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding RippleColor, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>