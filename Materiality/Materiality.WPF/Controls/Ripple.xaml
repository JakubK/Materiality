<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Materiality.WPF.Controls">
    <Style TargetType="{x:Type local:Ripple}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Ripple}">
                    <Ellipse Width="{Binding ActualWidth,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type local:Ripple}}}" Height="{Binding Path=Width,RelativeSource= {RelativeSource Self}}" Fill="{Binding RippleColor,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type local:Ripple}}}" VerticalAlignment="Top"  HorizontalAlignment="Left" >

                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>