<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Materiality.WPF.Controls">
    <Style TargetType="{x:Type local:Toolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Toolbar}">
                        <Border CornerRadius="2" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect Direction="-90" BlurRadius="10" ShadowDepth="1" Color="Black" />
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center" IsItemsHost="True" Orientation="Horizontal"/>
                        </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>