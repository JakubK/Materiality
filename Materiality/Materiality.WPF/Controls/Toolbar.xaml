<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Materiality.WPF.Controls">
    <Style TargetType="{x:Type local:Toolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Toolbar}">
                    <Grid Height="{TemplateBinding Height}" Background="{TemplateBinding Background}">
                        <Grid.Effect>
                            <DropShadowEffect Direction="-90" BlurRadius="10" ShadowDepth="1" Color="Black" />
                        </Grid.Effect>
                        <StackPanel VerticalAlignment="Center" IsItemsHost="True" Orientation="Horizontal"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>