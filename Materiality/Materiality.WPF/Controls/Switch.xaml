<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Materiality.WPF.Controls">
    <Style TargetType="{x:Type local:Switch}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Switch}">
                    <Grid>
                        <Rectangle RadiusX="15" RadiusY="15"  Width="{TemplateBinding Width}" Fill="{TemplateBinding BackToggleBrush}" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">

                        </Rectangle>
                        <Grid x:Name="holder" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Ellipse Width="{Binding ActualHeight,RelativeSource={RelativeSource Self}}" Fill="{TemplateBinding FrontToggleBrush}" Height="{TemplateBinding Height}" >

                            </Ellipse>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>